{% include 'assets/head.html.twig' %}
{% include 'assets/navbar.dm.html.twig' %}


{% block body %}

<section class="d-flex flex-column mt-5">
    <div class="new-map d-flex justify-content-between border-bottom border-primary mx-5">
        <h1 class="mx-5 pb-3 text-secondary">Mes Cartes</h1>
        <div class="d-flex align-items-center me-5">
        <a href="{{ path('dm_map_add') }}" class="btn btn-secondary me-2">Créer une carte</a>
        </div>
    </div>
    {# <div class="d-flex flex-column align-items-center ">
        <p class="fs-3 mt-4 text-secondary">Vous n'avez pas encore créé de carte !</p>
        <a href="{{ path('dm_map_add') }}" class="btn btn-secondary">Créer une carte</a>
    </div> #}
    {% if maps == null %}
    <div class="d-flex flex-column align-items-center ">
        <p class="fs-3 mt-4 text-secondary">Vous n'avez pas encore créé de carte !</p>
        <p class="text-secondary">Pour créer une carte, cliquer sur le bouton suivant :</p>
        <a href="{{ path('dm_map_add') }}" class="btn btn-secondary">Créer une carte</a>
    </div>
    {% endif %}
</section>
    <section id="team" class="scroll">
        <div class="d-flex justify-content-evenly align-items-center mt-5 flex-wrap">
{% for map in maps %}
            <div class="d-flex flex-column align-items-center w-25">
                <div class="card mb-3 w-75">
                    <img class ="overflow-hidden" src="{{ asset('images/maps/' ~ map.filePath) }}" alt="logo-map">
                    <div class="card-body">
                        <p class="card-text text-center fw-bold fs-3">{{ map.name }}</p>
                        <p class="card-text text-center fw-bold">Créer le {{ map.createdAt|date("m/d/Y") }}</p>
                        <p class="card-text text-center fw-bold">{{ map.description }}...</p>
                    </div>
                    <div class="card-body d-flex justify-content-evenly">
                        <a href="{{ path('dm_map_read', {'id': map.id}) }}" class="card-link bg-secondary rounded-3 p-2 text-decoration-none">Détails</a>
                        <a href="{{ path('dm_map_delete', {'id': map.id}) }}" class="card-link bg-secondary rounded-3 p-2 text-danger text-decoration-none">Supprimer</a>
                    </div>
                </div>
            </div>
{% endfor %}
</div>      
    </section>
{% endblock %}

{% include 'assets/head.html.twig' %}
{% include 'assets/navbar.dm.html.twig' %}


{% block body %}


<section class="d-flex flex-column mt-5">
    <div class="map d-flex justify-content-between border-bottom border-primary mx-5">
        <div>
            <h1 class="text-secondary">{{ map.name }}</h1>
        </div>
        <div class="map__button d-flex">
            <div class="d-flex flex-column justify-content-center me-5"><a href="{{ path('dm_map_add') }}" class="btn btn-secondary">Créer une carte</a></div>
            <div class="d-flex flex-column justify-content-center me-5"><a href="{{ path('dm_map_edit', {'id': map.id}) }}" class="btn btn-secondary">Modifier la carte</a></div>
            <div class="d-flex flex-column justify-content-center me-5"><a href="{{ path('dm_map_delete', {'id': map.id}) }}" class="btn btn-danger">Supprimer la carte</a></div>
        </div>
    </div>
    <div class="d-flex justify-content-center mx-5 mt-2">
        <div class="map__description mx-2">
            <h4 class="text-secondary fw-bold"> Déscription :</h4>
            <p class="fs-5 mt-4 text-secondary overflow-auto h-75">{{ map.description }}</p>
        </div>
    </div>
</section>

{% endblock %}

{% include 'assets/head.html.twig' %}
{% include 'assets/navbar.dm.html.twig' %}


{% block body %}


<section class="d-flex flex-column mt-5">
    <div class="story d-flex justify-content-between border-bottom border-primary mx-5">
        <div>
            <h1 class="text-secondary">{{ story.name }}</h1>
            <div class="d-flex align-items-center mb-2">
                <label class="switch d-flex align-items-center me-2">
                    <div>
                        <input class="ms-1" type="checkbox" checked>
                        <span class="slider round"></span>
                    </div>
                </label>
                <div>
                    <i class="align-self-end">Terminer</i>
                </div>
            </div>
        </div>
        <div class="story__button d-flex">
            <div class="d-flex flex-column justify-content-center me-5"><a href="{{ path('dm_story_add') }}" class="btn btn-secondary">Créer une histoire</a></div>
            <div class="d-flex flex-column justify-content-center me-5"><a href="{{ path('dm_story_edit', {'id': story.id}) }}" class="btn btn-secondary">Modifier l'histoire</a></div>
            <div class="d-flex flex-column justify-content-center me-5"><a href="{{ path('dm_story_delete', {'id': story.id}) }}" class="btn btn-danger">Supprimer l'histoire</a></div>
        </div>
    </div>
    <div class="d-flex justify-content-center mx-5 mt-2">
        <div class="story__description mx-2 w-50 h-50">
            <h4 class="text-secondary fw-bold"> Déscription :</h4>
            <p class="fs-5 mt-4 text-secondary overflow-auto h-75">{{ story.description }}</p>
        </div>
        <div class="story__report mx-2 w-50 h-50">
            <h4 class="text-secondary fw-bold"> Rapport :</h4>
            <p class="fs-5 mt-4 text-secondary overflow-auto h-75">{{ story.report }}</p>
        </div>
    </div>
</section>

{% endblock %}
